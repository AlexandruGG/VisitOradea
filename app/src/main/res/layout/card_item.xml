<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_item_height"
    android:layout_gravity="center"
    android:layout_margin="@dimen/card_margin"
    android:layout_weight="1"
    android:background="@color/white_background"
    android:clickable="true"
    android:focusable="true"
    android:minHeight="@dimen/card_item_height"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/image_card"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="3.5"
            android:scaleType="fitXY"
            tools:src="@drawable/black_eagle_palace" />

        <TextView
            android:id="@+id/text_card_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingBottom="@dimen/padding_4dp"
            android:paddingLeft="@dimen/padding_8dp"
            android:paddingRight="@dimen/padding_8dp"
            android:paddingTop="@dimen/padding_8dp"
            tools:text="Black Eagle Palace"
            android:textSize="@dimen/card_title_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/padding_8dp"
            android:paddingLeft="@dimen/padding_4dp"
            android:paddingRight="@dimen/padding_8dp">

            <ImageView
                android:layout_width="@dimen/width_24dp"
                android:layout_height="@dimen/width_24dp"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_place" />

            <TextView
                android:id="@+id/text_card_address"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:ellipsize="end"
                android:paddingLeft="@dimen/padding_6dp"
                android:textSize="@dimen/card_address_size" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>